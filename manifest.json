{
  "manifest_version": 2,
  "name": "anidl",
  "version": "1.0",

  "permissions": [
    "contextMenus"
  ],

  "browser_action": {
    "default_icon": {
    },
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [ "script.js" ]
    }
  ],

  "background": {
    "scripts": [ "jquery-2.1.4.min.js", "background.js" ],
    "persistent": false
  },

  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
